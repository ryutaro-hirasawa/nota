= render "notes/header"
.main
  = render "users/left"

  .main_right
    .main_right_contents
      %h.main_right_user= current_user.nickname
      さんのノート一覧
      .main_right_images
        - @notes.each do |note|
          .main_right_images_image
            = link_to "../notes/#{note.id}" do
              = image_tag note.images[0], width:"184",height:"150"
              %br
              .main_right_images_title
                = note.title
    .main_right_contents
      %h.main_right_user= current_user.nickname
      さんのお気に入りノート一覧
      .main_right_favorites
        - @notes.each do |note|
          .main_right_favorites_favorite
            = link_to "../notes/#{note.id}" do
              = image_tag note.images[0], width:"184",height:"150"
              %br
              .main_right_ifavorites_title
                = note.title

= render "notes/appbanner"
= render "notes/footer"