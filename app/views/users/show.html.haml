= render "notes/header"
- breadcrumb :mypage
= breadcrumbs separator: " &rsaquo; "
.main
  = render "users/left"

  .main_right
    .main_right_contents
      %h.main_right_user= current_user.nickname
      さんのノート一覧
      .main_right_images
        - @notes.each do |note|
          .main_right_images_image
            = link_to note_path(note) do
              = image_tag note.images[0], width:"184",height:"150"
              %br
              .main_right_images_title
                = note.title
    .main_right_contents
      %h.main_right_user= current_user.nickname
      さんのお気に入りノート一覧
      %i.fas.fa-arrow-circle-down
      .main_right_content
        .main_right_favorites
          - if @favorites.present?
            - @favorites.each do |f|
              .main_right_images_image
                = link_to note_path(f.note) do
                  = image_tag f.note.images[0], width:"184",height:"150"
                  %br
                  .main_right_images_title
                    = f.note.title
          - else
            %h1 お気に入りはまだ登録されていないです。

= render "notes/appbanner"
= render "notes/footer"